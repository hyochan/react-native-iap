#!/bin/sh

echo "🔍 Running pre-commit checks..."

# Install dependencies if needed
echo "📦 Checking dependencies..."
if [ ! -d "node_modules" ] || [ ! -d "example/node_modules" ]; then
  echo "📦 Installing dependencies..."
  yarn install
fi

# Run typecheck for entire project
echo "🔍 Running TypeScript check..."
yarn typecheck
if [ $? -ne 0 ]; then
  echo "❌ TypeScript check failed. Please fix errors before committing."
  exit 1
fi

# Run lint-staged for changed files only
echo "✨ Running lint-staged..."
yarn lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Lint-staged failed. Please fix errors before committing."
  exit 1
fi

# Check if test script exists and run tests
if grep -q '"test"' package.json; then
  echo "🧪 Running tests..."
  yarn test
  if [ $? -ne 0 ]; then
    echo "❌ Tests failed. Please fix errors before committing."
    exit 1
  fi
fi

# Generate Nitro code if .nitro.ts files were changed
if git diff --cached --name-only | grep -q "\.nitro\.ts$"; then
  echo "⚙️ Regenerating Nitro code..."
  yarn specs
  if [ $? -ne 0 ]; then
    echo "❌ Nitro code generation failed. Please fix errors before committing."
    exit 1
  fi
  
  # Add generated files to commit if they changed
  git add nitrogen/generated
fi

echo "✅ All checks passed! Ready to commit."