#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for changed files
echo "âœ¨ Running lint-staged..."
yarn lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed. Please fix errors before committing."
  exit 1
fi

# Run typecheck for entire project
echo "ğŸ” Running TypeScript check..."
yarn typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Please fix errors before committing."
  exit 1
fi

# Run lint check
echo "ğŸ” Running ESLint..."
yarn lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix errors before committing."
  exit 1
fi

# Generate Nitro code if .nitro.ts files were changed
if git diff --cached --name-only | grep -q "\.nitro\.ts$"; then
  echo "âš™ï¸ Regenerating Nitro code..."
  yarn specs
  if [ $? -ne 0 ]; then
    echo "âŒ Nitro code generation failed. Please fix errors before committing."
    exit 1
  fi
  
  # Add generated files to commit if they changed
  git add nitrogen/generated
fi

echo "âœ… All checks passed! Ready to commit."