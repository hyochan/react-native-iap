#!/bin/sh

echo "ğŸ” Running pre-commit checks..."

# Install dependencies if needed
echo "ğŸ“¦ Checking dependencies..."
if [ ! -d "node_modules" ] || [ ! -d "example/node_modules" ]; then
  echo "ğŸ“¦ Installing dependencies..."
  bun install
  cd example && bun install && cd ..
fi

# Run typecheck for entire project
echo "ğŸ” Running TypeScript check..."
bun run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Please fix errors before committing."
  exit 1
fi

# Run lint-staged for changed files only
echo "âœ¨ Running lint-staged..."
bunx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed. Please fix errors before committing."
  exit 1
fi

# Check if test script exists and run tests
if grep -q '"test"' package.json; then
  echo "ğŸ§ª Running tests..."
  bun run test
  if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix errors before committing."
    exit 1
  fi
fi

# Generate Nitro code if .nitro.ts files were changed
if git diff --cached --name-only | grep -q "\.nitro\.ts$"; then
  echo "âš™ï¸ Regenerating Nitro code..."
  bun run specs
  if [ $? -ne 0 ]; then
    echo "âŒ Nitro code generation failed. Please fix errors before committing."
    exit 1
  fi
  
  # Add generated files to commit if they changed
  git add nitrogen/generated
fi

echo "âœ… All checks passed! Ready to commit."