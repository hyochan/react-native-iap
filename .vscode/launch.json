{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸ”§ Build & Run iOS Simulator",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": [
        "-c",
        "yarn install && cd example/ios && pod install && cd ../.. && yarn workspace rn-iap-example ios"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "ðŸ“± Build & Run iOS Device",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": [
        "-c",
        "yarn install && cd example/ios && pod install && cd ../.. && yarn workspace rn-iap-example ios --device"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "ðŸ¤– Build & Run Android",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": [
        "-c",
        "yarn install && yarn workspace rn-iap-example start --reset-cache & sleep 5 && yarn workspace rn-iap-example android"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "âš¡ Quick iOS Simulator (no rebuild)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "yarn workspace rn-iap-example ios"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "âš¡ Quick iOS Device (no rebuild)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "yarn workspace rn-iap-example ios --device"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "âš¡ Quick Android (no rebuild)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "yarn workspace rn-iap-example android"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
