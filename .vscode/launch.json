{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸ”§ Build & Run iOS Simulator",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": [
        "-c",
        "bunx kill-port 8081 && rm -rf node_modules example/node_modules && bun install && bun run specs && cd example && bun install && cd ios && bundle exec pod install && cd .. && bunx react-native run-ios"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
