{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸ”§ Build & Run iOS Simulator",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": [
        "-c",
        "bun install && cd example && bun install && npx pod-install && bun ios"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "ðŸ“± Build & Run iOS Device",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": [
        "-c",
        "bun install && cd example && bun install && npx pod-install && bun ios --device"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "ðŸ¤– Build & Run Android",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": [
        "-c",
        "rm -rf node_modules && bun install && cd example && rm -rf node_modules && bun install && rm -rf node_modules/react-native-iap/node_modules && bunx react-native start --reset-cache & sleep 5 && bunx react-native run-android"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "âš¡ Quick iOS Simulator (no rebuild)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "cd example && bunx react-native run-ios"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "âš¡ Quick iOS Device (no rebuild)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "cd example && bunx react-native run-ios --device"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "âš¡ Quick Android (no rebuild)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "cd example && bunx react-native run-android"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
